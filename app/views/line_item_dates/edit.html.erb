<main class="container">
  <%= link_to sanitize("&larr; Back to task"),
              task_path(@task) %>
  <div class="header">
    <h1>Edit task</h1>
  </div>
  <%= turbo_frame_tag dom_id(@line_item_date, :edit) do %>
    <%= render "form",
              task: @task,
              line_item_date: @line_item_date %>
  <% end %>
</main>
