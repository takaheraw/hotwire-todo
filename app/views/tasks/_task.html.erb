<%= turbo_frame_tag task do %>
  <div class="task">
    <%= link_to task.name,
                task_path(task),
                data: { turbo_frame: "_top" } %>
    <div class="task__actions">
      <%= button_to "Delete",
                    task_path(task),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_task_path(task),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>
