<main class="container mb-xxxxl">
  <%= link_to sanitize("&larr; Back to tasks"), tasks_path %>

  <div class="header">
    <h1><%= @task.name %></h1>

    <%= link_to "New date",
                new_task_line_item_date_path(@task),
                data: { turbo_frame: dom_id(LineItemDate.new) },
                class: "btn btn--primary" %>
  </div>

  <%= turbo_frame_tag LineItemDate.new %>
  <%= turbo_frame_tag "line_item_dates" do %>
    <%= render @line_item_dates, task: @task %>
  <% end %>
</main>

<%= turbo_frame_tag dom_id(@task, :total) do %>
  <%= render "tasks/total", task: @task %>
<% end %>
