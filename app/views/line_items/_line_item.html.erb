<%= turbo_frame_tag line_item do %>
  <div class="line-item">
    <div class="line-item__name">
      <%= line_item.name %>

      <div class="line-item__description">
        <%= simple_format line_item.description %>
      </div>
    </div>

    <div class="line-item__manday">
      <%= line_item.man_day %>
    </div>

    <div class="line-item__actions">
      <%= button_to "Delete",
                    [task, line_item_date, line_item],
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  [:edit, task, line_item_date, line_item],
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>
